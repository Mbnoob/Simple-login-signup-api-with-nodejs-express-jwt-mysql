<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registard</title>
    <link rel="icon" type="image/png" sizes="32x32" href="/src/favicon.png">
    <link rel="stylesheet" href="/styleSheet/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
        crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/simple-notify@0.5.5/dist/simple-notify.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>

<body>
    <% let success_message = [] %>
    <% let errors_message = [] %>
    
    <% let titles_msg1 = [] %>
    <% if(sucess != '' || titles){ %>
        <% success_message.push(sucess) %>    
        <% titles_msg1.push(titles) %>    
        <% } %>
        
    <% let titles_msg2 = [] %>
    <% if( errors && titles != ''){ %>
            <% errors_message.push(errors) %>
            <% titles_msg2.push(titles) %>
        <% } %>
        
    <div class="container">
        <div class="sections">
            <form action="/reg" method="post" id="form">
                <h1>Sign Up</h1>
                            
                                <div class="inbox">
                                    <input type="text" placeholder="Enter Your First Name" name="First_name">
                                </div>
                                <div class="inbox">
                                    <input type="text" placeholder="Enter Your Last name" name="Last_name">
                                </div>
                                <div class="inbox">
                                    <input placeholder="Enter Your Date of Birth" class="textbox-n" type="text"
                                        onfocus="(this.type='date')" name="dob">
                                </div>
                                <div class="inbox">
                                    <input type="text" placeholder="Enter Your Email Id" name="email_id">
                                </div>
                                <div class="inbox">
                                    <input type="password" placeholder="Enter Your Passwords" name="passwords"
                                        onclick="showPasswrd()" id="passwords">
                                </div>
                                <div class="inbox">
                                    <input type="password" placeholder="Confirm Your Passwords" name="conforn_passwords"
                                        onclick="Showconf_pass()" id="con_pass">
                                </div>
                                <div class="button">
                                    <input type="submit" value="Sign Up" id="submit" >
                                <div class="regLink">
                                    <a href="/login" target="_blank">You Have An Account!</a><br>
                                    <a href="/admin/login" target="_blank">If you are admin !</a><br>
                                </div>
                            </div>
            </form>
        </div>
    </div>

    <script defer src="/javascripts/index.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"
        integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct"
        crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/simple-notify@0.5.5/dist/simple-notify.min.js"></script>

    <script>
       // Toaster Notification................................
       $(window).on("load", function(){
            let sucessAlerts = "<%=success_message %>";
            let errorsAlerts = "<%=errors_message %>";
            let titles1 = "<%= titles_msg1 %>";
            let titles2 = "<%= titles_msg2 %>";

            if (sucessAlerts) {
                new Notify({
                status: 'success',
                title: titles1,
                text: sucessAlerts,
                effect: 'slide',
                speed: 300,
                customClass: '',
                customIcon: '',
                showIcon: true,
                showCloseButton: true,
                autoclose: true,
                autotimeout: 3000,
                gap: 80,
                distance: 10,
                type: 3,
                position: 'right top'
            });
            } else if (errorsAlerts){
               new Notify({
                status: 'error',
                title: titles2,
                text: errorsAlerts,
                effect: 'slide',
                speed: 500,
                customClass: '',
                customIcon: '',
                showIcon: true,
                showCloseButton: true,
                autoclose: true,
                autotimeout: 3000,
                gap: 80,
                distance: 10,
                type: 3,
                position: 'right top'
            });
            };     
        });
    </script>
</body>

</html>