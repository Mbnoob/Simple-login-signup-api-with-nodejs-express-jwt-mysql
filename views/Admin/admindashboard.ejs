<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>

    <link rel="stylesheet" href="/styleSheet/admindashboard.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
        crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/simple-notify@0.5.5/dist/simple-notify.min.css" />
</head>

<body>
    <div class="nav_bar">
        <nav class="navbar navbar-light fixed-top pt-3 pb-3" style="background-color: #48cae4;">
            <a class="navbar-brand pl-5" href="/admindashboard">
                <img src="/src/logo.png" style="height: 33px;" alt="Company logo">
            </a>
            <ul class="" style="width: 13%; margin: inherit;">
                <li class="nav-item dropdown" style="list-style-type: none; color: #303a4e; font-size: 16px;">
                    <a class="nav-link dropdown-toggle" role="button" data-toggle="dropdown" aria-expanded="false">
                     
                        <% if (typeof username !=undefined) { %>
                            <%= username %>
                                <% }else {%>
                                    Profile
                                    <% } %>
                    </a>
                    <div class="dropdown-menu">
                        <% if(typeof userId !=undefined){ %>
                            <a class="dropdown-item" style="color: #303a4e;"
                                href="/adminProfile/<%= userId %>">Profile Upload</a>
                            <% }else { %>
                                <% if (typeof response !=undefined) { %>
                                    <% response.forEach((e)=> { %>
                                        <a class="dropdown-item" style="color: #303a4e;"
                                            href="/adminProfile/<%= e.userId %>">Profile Upload</a>
                                        <% }); %>
                                            <% } %>
                                                <% } %>
                                                    <a class="dropdown-item" style="color: #303a4e;"
                                                        href="/changePassword">change Password</a>
                                                    <div class="dropdown-divider"></div>
                                                    <div class="logout">
                                                        <button type="button" class="btn btn-outline-danger"
                                                            data-toggle="modal" data-target="#exampleModal">
                                                            Logout
                                                        </button>
                                                    </div>
                </li>
            </ul>
        </nav>
    </div>
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header" style="display: flex; justify-content: center; align-items: center;">
                    <i class="bi bi-exclamation-triangle-fill" style="padding: 0px 5px 0px; color: red;"></i>
                    <h5 class="modal-title" id="exampleModalLabel">Alert</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure, You want to Logout !
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <form action="/admin/logout" method="POST">
                        <input type="submit" value="Yes" id="exampleModal" class="btn btn-danger">
                    </form>
                </div>
            </div>
        </div>
    </div>
    
    <% let success_msg = [] %>
    <% let errors_msg = [] %>
    <% let titles_mesage = [] %>
    <% if(sucess && sucess != '' || titles){ %>
            <% titles_mesage.push(titles) %> 
            <% success_msg.push(sucess) %> 

            <% }else if(errors && errors != '' && titles){ %>
            <% titles_mesage.push(titles) %> 
            <% errors_msg.push(errors) %>
        <% } %>

    <div class="main">
        <div class="container">
            <% if (typeof response !=undefined ) { %>
                <% if (response[0]) { %>


                    <table class="table table-striped table-dark">
                        <thead>
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">First Name</th>
                                <th scope="col">Last Name</th>
                                <th scope="col">Date of Birth</th>
                                <th scope="col">Email</th>
                                <th scope="col">Role</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>

                        <% response.forEach((e)=> { %>
                            <tbody>
                                <tr>
                                    <th scope="row">
                                        <%= e.id %>
                                    </th>
                                    <td>
                                        <%= e.first_name %>
                                    </td>
                                    <td>
                                        <%= e.last_name %>
                                    </td>
                                    <td>
                                        <%= e.dob %>
                                    </td>
                                    <td>
                                        <%= e.email_id %>
                                    </td>
                                    <td>
                                        <%= e.role %>
                                    </td>
                                    <td class="text-end">

                                        <div class="d-flex flex-row justify-content-end gap-2">
                                            <a href="/user/edit/<%= e.id %>" type="button"
                                                class="btn btn-warning btn-sm"><i class="bi bi-pencil-square"
                                                    style="color: white;"></i></a>
                                        </div>

                                    </td>
                                </tr>
                            </tbody>
                            <% }); %>
                                <% }else{ %>
                                    <h1><i class="bi bi-exclamation-triangle-fill"></i>Nothing Data Found From Database
                                    </h1>
                                    <% } %>
                                        <% } %>
                    </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"
        integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct"
        crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/simple-notify@0.5.5/dist/simple-notify.min.js"></script>

    <script>
        $(window).on("load",function () {
            let sucessAlert = "<%=success_msg %>";
            let errorsAlert = "<%=errors_msg %>";
            let title = "<%=titles_mesage %>";
            if (sucessAlert) {
                new Notify({
                status: 'success',
                title: (title != '')?title:'<%= username %>',
                text: sucessAlert,
                effect: 'slide',
                speed: 400,
                customClass: '',
                customIcon: '',
                showIcon: true,
                showCloseButton: true,
                autoclose: true,
                autotimeout: 3000,
                gap: 80,
                distance: 10,
                type: 3,
                position: 'right top'
            })
            }else if (errorsAlert){
                new Notify({
                status: 'error',
                title: title,
                text: errorsAlert,
                effect: 'slide',
                speed: 400,
                customClass: '',
                customIcon: '',
                showIcon: true,
                showCloseButton: true,
                autoclose: true,
                autotimeout: 3000,
                gap: 80,
                distance: 10,
                type: 3,
                position: 'right top'
            })
            }
        });
    </script>
</body>

</html>