<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Update User Profile</title>

    <link rel="stylesheet" href="/styleSheet/adminupdate_Userprofile.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
        crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />
    
</head>
<body>
    <div class="nav_bar">
        <nav class="navbar navbar-light fixed-top pt-3 pb-3" style="background-color: #48cae4;">
            <a class="navbar-brand pl-5" href="/admindashboard">
                <img src="/src/logo.png" style="height: 33px;" alt="Company logo">
            </a>
            <ul class="" style="width: 13%; margin: inherit;">
                <li class="nav-item dropdown" style="list-style-type: none; color: #303a4e; font-size: 16px;">
                    <a class="nav-link dropdown-toggle" role="button" data-toggle="dropdown" aria-expanded="false">
                        
                        <% if (typeof username != undefined) { %>
                            <%= username %>
                                <% }else {%>
                                    Profile
                                    <% } %>
                    </a>
                    <div class="dropdown-menu">
                        <div class="logout">
                            <button type="button" class="btn btn-outline-danger" data-toggle="modal"
                                data-target="#exampleModal">
                                Logout
                            </button>
                        </div>
                </li>
            </ul>
        </nav>
    </div>

    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header" style="display: flex; justify-content: center; align-items: center;">
                    <i class="bi bi-exclamation-triangle-fill" style="padding: 0px 5px 0px; color: red;"></i>
                    <h5 class="modal-title" id="exampleModalLabel">Alert</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure, You want to Logout !
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <form action="/admin/logout" method="POST">
                        <input type="submit" value="Yes" id="exampleModal" class="btn btn-danger">
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="main"> 
        <div class="container"> 
            <div class="card-container">
                <% if (typeof admin != undefined) { %>
                    <% admin.forEach((e) => { %>
                        <% if (e.file_name) { %>
                            <img class="round" src='\uploads\<%= e.file_name %>' alt="user" />
                            <% }else { %>
                                <img class="round" src='https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSJxA5cTf-5dh5Eusm0puHbvAhOrCRPtckzjA&usqp=CAU' alt="user" />
                            <% } %>
                            <% if (typeof id != null) { %>
                                <span class="pro"><%= id %></span>
                        <%  }else { %>
                                <span class="pro">Undefined</span>
                       <%  } %>
                    <h3>Name: <%= e.first_name + " "+ e.last_name %></h3>
                    <h6 id="h6"> <%= e.email_id %></h6>
                    <h6> <%= e.dob %> </h6>
              <%  }); %>
        <%  } %>

        <form action="/user/edit/<%= (typeof id != null)? id:'' %>" method="post">
            <div class="inbox">
                <input type="text" placeholder="Enter User Role" name="role" value="<%= (typeof admin != undefined)? admin[0].role:'' %>" required>
            </div>
            <div class="buttons">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-pencil-square pr-2"></i>Update Role
                  </button>
            </div>
        </form>
            </div>
        </div>
    </div>
        

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"
    integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
    crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct"
    crossorigin="anonymous"></script>
   
</body>
</html>