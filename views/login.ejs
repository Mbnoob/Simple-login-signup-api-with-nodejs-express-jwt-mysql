<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="icon" type="image/png" sizes="32x32" href="/src/favicon.png">
    <link rel="stylesheet" href="/styleSheet/login.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
        crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/simple-notify@0.5.5/dist/simple-notify.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>

<body>

    <% let errors_msgs = [] %>
    <% let titles_msgs = [] %>
   <%  if(errors && errors != '' && titles){ %>
            <% errors_msgs.push(errors) %>
            <% titles_msgs.push(titles) %>
        <% } %>

    <div class="main">
        <div class="log_container">
            <form action="/login" method="post">
                <h1>Login</h1>
                        <div class=" inbox">
                            <input type="text" placeholder="Enter Your Email-id" name="log_email">
                        </div>
                        <div class="inbox">
                            <input type="password" placeholder="Enter Your Passwords" name="log_passwords"
                                onclick="showPasswrd()" id="passwords">
                        </div>
                        <div class="button">
                            <input type="submit" value="Login" id="login">
                            <div class="regLink">
                                <a href="/reg" target="_blank">You Don't Have An Account!</a><br>
                                <a href="/admin/login" target="_blank">If you are admin !</a><br>
                                <a href="#">Forget Your Passwords!</a>
                            </div>
                        </div>
            </form>
        </div>
    </div>

    <script defer src="/javascripts/login.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"
        integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct"
        crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/simple-notify@0.5.5/dist/simple-notify.min.js"></script>
    <script>
         $(window).on("load",function () {
            let errorsAlerts = "<%= errors_msgs %>";
            let titles = "<%= titles_msgs %>";
            if (errorsAlerts) {
                new Notify({
                status: 'error',
                title: titles,
                text: errorsAlerts,
                effect: 'slide',
                speed: 400,
                customClass: '',
                customIcon: '',
                showIcon: true,
                showCloseButton: true,
                autoclose: true,
                autotimeout: 3000,
                gap: 20,
                distance: 120,
                type: 3,
                position: 'right top'
            }) 
            }
            
        })
    </script>
</body>

</html>