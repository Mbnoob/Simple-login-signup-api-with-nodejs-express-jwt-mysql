<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit User Transection Request</title>
    <link rel="icon" type="image/png" sizes="32x32" href="/src/favicon.png">
    <link rel="stylesheet" href="/styleSheet/editRequest.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
        crossorigin="anonymous" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/simple-notify@0.5.5/dist/simple-notify.min.css" />
</head>
<body>
    <div class="nav_bar">
        <nav class="navbar navbar-light fixed-top pt-3 pb-3" style="background-color: #48cae4;">
            <a class="navbar-brand pl-5" href="/dashboard">
                <img src="/src/logo.png" style="height: 33px;" alt="Company logo">
            </a>            
            <ul class="" style="width: 13%; margin: inherit;">
                <li class="nav-item dropdown" style="list-style-type: none; color: #303a4e; font-size: 16px; position: relative;
                right: -40px;">
                    <a class="nav-link dropdown-toggle" role="button" data-toggle="dropdown" aria-expanded="false">
                        <% if (typeof username != undefined) { %>
                            <%= username %>
                                <% }else {%>
                                    Profile
                                    <% } %>
                    </a>
                    <div class="dropdown-menu">
                        <% if(typeof userId != undefined){ %>
                            <a class="dropdown-item" style="color: #303a4e;" href="/profile_update/<%= userId %>">Profile Upload</a>
                            <% }else { %>
                                <% if (typeof result != undefined) { %>
                                <% result.forEach((e) => { %>
                                    <a class="dropdown-item" style="color: #303a4e;" href="/profile_update/<%= e.userId %>">Profile Upload</a>
                          <%  }); %>
                        <% } %>
                        <%  } %>
                        <a class="dropdown-item" style="color: #303a4e;" href="/changePassword">change Password</a>
                        <div class="dropdown-divider"></div>
                        <div class="logout">
                            <button type="button" class="btn btn-outline-danger" data-toggle="modal"
                                data-target="#exampleModal">
                                Logout
                            </button>
                        </div>
                </li>
            </ul>
        </nav>
    </div>

    <div class="main">
        <div class="container">
            <div class="card-container">
            
                <form action="/edit/request/update" method="post">
                    <h2 class="font-italic">Edit Transection Request</h2>
                    <input type="text" class="form-control" name="types" value="<%= (typeof result != undefined)?result[0].types:''  %>">
                    <input type="text" class="form-control" name="payments_date" value="<%= (typeof result != undefined)?result[0].payments_date:''  %>">
                    <input type="hidden" name="transections_id" value="<%= (typeof result != undefined)?result[0].transections_id:'' %>"> 
                    <% result.forEach((e,i) => { %>
                        <% let index = i+1; %>
                    <div class="form-group">
                        <span><%= index %></span>
                        <input type="hidden" name="user_transection_id" value="<%= e.user_transection_id %>"> 
                    </div>
                    <div class="form-group">
                      <input type="text" class="form-control" name="descriptions" value="<%= e.descriptions %>">
                    </div>
                    <div class="form-group">
                      <input type="text" class="form-control" name="amounts" value="<%= e.amounts %>">
                    </div>
                    <% }); %>
                    <div class="form-footer">
                        <button type="submit" class="btn btn-primary"><i class="bi bi-cloud-arrow-up-fill"></i> Update</button>
                    </div>
                  </form>
                        </div>
                      </div>
 <!-- Modal -->
                            <div class="modal fade" id="deleterequest" tabindex="-1" aria-labelledby="deleterequest1" aria-hidden="true">
                                <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                    <h5 class="modal-title" id="deleterequest1">Modal title</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                    </div>
                                    <div class="modal-body">
                                    ...
                                    </div>
                                    <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <form action="delete/request/4" method="post">
                                    <button type="submit" class="btn btn-primary">Save changes</button>
                                    </form>
                                    </div>
                                </div>
                                </div>
                            </div>
                    </div>
                  </div>
            </div>
        </div>
    </div>

<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"
    integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
    crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct"
    crossorigin="anonymous"></script>
<script src="https://unpkg.com/typed.js@2.0.16/dist/typed.umd.js"></script>
<script src="https://cdn.jsdelivr.net/npm/simple-notify@0.5.5/dist/simple-notify.min.js"></script>
</body>
</html>